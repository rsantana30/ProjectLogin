<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza_digaomotos"
    tools:context=".user_screen">

    <View
        android:id="@+id/conteinerComponents"
        style="@style/conteinerComponents"
        android:layout_width="384dp"
        android:layout_height="259dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conteiner_user"
        app:layout_constraintVertical_bias="0.168" />

    <TextView
        android:id="@+id/email_usuario"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        app:layout_constraintEnd_toEndOf="@+id/conteinerComponents"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toEndOf="@+id/icone_email_usuario"
        app:layout_constraintTop_toBottomOf="@+id/text_usuario" />

    <ImageView
        android:id="@+id/icone_email_usuario"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_email"
        app:layout_constraintStart_toStartOf="@+id/conteinerComponents"
        app:layout_constraintTop_toBottomOf="@+id/icone_usuario" />

    <View
        android:id="@+id/conteiner_user"
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/conteiner_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="156dp"
        android:layout_height="127dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/conteiner_user"
        app:layout_constraintEnd_toEndOf="@+id/conteiner_user"
        app:layout_constraintStart_toStartOf="@+id/conteiner_user"
        app:layout_constraintTop_toTopOf="@+id/conteiner_user" />

    <ImageView
        android:id="@+id/icone_usuario"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_person_24"
        app:layout_constraintEnd_toStartOf="@+id/text_usuario"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/conteinerComponents"
        app:layout_constraintTop_toTopOf="@+id/conteinerComponents" />

    <TextView
        android:id="@+id/text_usuario"
        android:layout_width="288dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Usuario"
        app:layout_constraintEnd_toEndOf="@+id/conteinerComponents"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@+id/icone_email_usuario"
        app:layout_constraintTop_toTopOf="@+id/conteinerComponents" />

    <Button
        android:id="@+id/deslogar"
        android:layout_width="362dp"
        android:layout_height="74dp"
        android:backgroundTint="@color/black"
        android:padding="20dp"
        android:text="Sair"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/conteinerComponents"
        app:layout_constraintEnd_toEndOf="@+id/conteinerComponents"
        app:layout_constraintStart_toStartOf="@+id/conteinerComponents"
        app:layout_constraintTop_toBottomOf="@+id/text_email_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>